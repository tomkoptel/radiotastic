<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.radiotastic" >

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/RadiotasticTheme" >
        <activity
            android:name=".presentation.StartupPage"
            android:label="@string/title_activity_startup_page"
            android:theme="@style/RadiotasticTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.app.radiotastic.data.db.AppProvider"
            android:authorities="com.app.radiotastic.data.db.provider"
            android:exported="false" />
    </application>

</manifest>
